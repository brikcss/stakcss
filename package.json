{
	"name": "@brikcss/stakcss",
	"version": "0.8.0",
	"description": "Stakcss takes a \"stak\" of files or data, runs them through a series of bundlers (not included), and outputs bundled data, optionally saved to disk.",
	"author": "BrikCSS <https://github.com/brikcss>",
	"contributors": [
		"The Zimmee <thezimmee@gmail.com>"
	],
	"homepage": "https://github.com/brikcss/stakcss",
	"repository": {
		"type": "git",
		"url": "https://github.com/brikcss/stakcss.git"
	},
	"bugs": {
		"url": "https://github.com/brikcss/stakcss/issues"
	},
	"keywords": [
		"brikcss",
		"stakcss",
		"stacks",
		"bundler",
		"build",
		"compiler",
		"transpiler",
		"task runner"
	],
	"bin": {
		"stak": "./bin/stakcss-cli.js",
		"bundle": "./bin/stakcss-cli.js"
	},
	"main": "./lib/stakcss.js",
	"directories": {
		"bin": "./bin",
		"lib": "./lib"
	},
	"files": [
		"lib",
		"bin"
	],
	"publishConfig": {
		"tag": "dev",
		"access": "public"
	},
	"husky": {
		"hooks": {
			"pre-commit": "node ./node_modules/.bin/pre-commit-lint",
			"commit-msg": "commitlint -e $GIT_PARAMS && . ./node_modules/.bin/commit-msg-stamp-branch ${GIT_PARAMS}",
			"pre-push": ". ./node_modules/.bin/pre-push-check-stage && echo \"\n[ok] Pushing code...\""
		}
	},
	"scripts": {
		"start": "npm run test:unit -- --watch",
		"ci": "concurrently \"npm run test:lint\" \"npm run test:coverage && npm run test:report\"",
		"test": "concurrently \"npm run test:lint\" \"npm run test:coverage\"",
		"test:lint": "node ./node_modules/.bin/eslint ./{lib,bin}/*.js && echo \"\n[ok] Linter complete.\n\"",
		"test:unit": "node ./node_modules/.bin/mocha \"./test/*.spec.js\" --reporter=mocha-better-spec-reporter --colors",
		"test:coverage": "nyc --reporter=lcov --reporter=text mocha \"./test/*.spec.js\" --recursive",
		"test:report": "concurrently \"cat coverage/lcov.info | codacy-coverage --token=$CODACY_PROJECT_TOKEN\" \"nyc report --reporter=text-lcov | coveralls\"",
		"semantic-release": "semantic-release"
	},
	"devDependencies": {
		"@brikcss/git-hooks": "1.2.0",
		"@brikcss/stakcss-bundler-copy": "0.1.0",
		"@commitlint/cli": "7.2.1",
		"codacy-coverage": "3.2.0",
		"concurrently": "4.0.1",
		"coveralls": "3.0.2",
		"mocha": "5.2.0",
		"mocha-better-spec-reporter": "3.1.0",
		"nyc": "13.1.0",
		"rimraf": "2.6.2",
		"semantic-release": "15.10.8",
		"shelljs": "0.8.2"
	},
	"dependencies": {
		"@brikcss/merge": "1.0.7",
		"@brikcss/timer": "1.0.4",
		"chokidar": "2.0.4",
		"cosmiconfig": "5.0.7",
		"fs-extra": "7.0.1",
		"globby": "8.0.1",
		"loglevel": "1.6.1"
	}
}
